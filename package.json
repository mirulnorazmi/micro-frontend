  "main": "index.js",
  "scripts": {
    "install": "npm-run-all --serial install:*",
    "install:root-app": "cd root-app && npm i",
    "install:todo-app": "cd todo-app && npm i",
    "install:employee-app": "cd employee-app && npm i",
    "start": "npm-run-all --parallel start:*",
    "start:root-app": "cd root-app && npm start",
    "start:todo-app": "cd todo-app && npm start",
    "start:employee-app": "cd employee-app && npm start",
    "build": "npm-run-all build:*",
    "build:root-app": "cd root-app && npm run build",
    "build:todo-app": "cd todo-app && npm run build",
    "build:employee-app": "cd employee-app && npm run build"
  },
